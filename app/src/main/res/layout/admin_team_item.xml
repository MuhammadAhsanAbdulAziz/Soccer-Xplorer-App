<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="detail"
            type="com.example.soccerxplorer.model.TeamModel" />
        <variable
            name="TeamInterface"
            type="com.example.soccerxplorer.interfaces.TeamInterface" />
    </data>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal"
        android:onClick="@{()->TeamInterface.TeamDetail(detail)}"
        android:padding="16dp">
        <TextView
            android:textStyle="bold"
            android:id="@+id/counter"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="N"
            android:textColor="@color/black"
            android:textSize="18sp" />
        <ImageView
            android:id="@+id/adminplayerimg"
            android:scaleType="centerCrop"
            android:layout_width="0dp"
            android:layout_marginRight="20dp"
            android:layout_height="40dp"
            android:layout_weight="2"
            android:src="@drawable/ic_launcher_background"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="9.5"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:textStyle="bold"
                    android:id="@+id/title"
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:text="@{detail.teamName}"
                    android:layout_height="wrap_content"
                    android:hint="Title"
                    android:textColor="@color/black"
                    android:textSize="18sp" />
            </LinearLayout>

            <TextView
                android:text="@{detail.teamCountry}"
                android:id="@+id/desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:hint="Description"
                android:textColor="@color/black"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>
</layout>