                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textbg"
                    android:textSize="15sp"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_marginLeft="30dp"
                    android:text="A player is considered offside if they are closer to the opponent's goal line than both the ball and the second-to-last defender (usually the last outfield player) at the moment the ball is played to them."/>



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:fontFamily="@font/poppins_regular"
